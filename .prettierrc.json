{
    "$schema": "https://json.schemastore.org/prettierrc",
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": true,
    "endOfLine": "auto",
    "trailingComma": "none",
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^reflect-metadata$",
        "<THIRD_PARTY_MODULES>",
        "@common/(.*)$",
        "@middlewares/(.*)$",
        "@contexts/(.*)$",
        "@/(.*)$",
        "^[../]",
        "^[./]",
        "@database/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": ["typescript", "decorators-legacy"]
}
